{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <div class="container">
        <h1>Auteur</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ author.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ author.lastname }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ author.birthdate ? author.birthdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Country</th>

                <td>{{ author.country }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_author_index') }}" class="btn btn-info">Retour vers la liste</a>

        <a href="{{ path('app_author_edit', {'id': author.id}) }}" class="btn btn-primary">éditer</a>

        {{ include('author/_delete_form.html.twig') }}
    </div>
{% endblock %}
