{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row">
        <div class="col-3">
            <a href="{{ path('book_listing') }}" class="btn btn-secondary">Retour</a>
        </div>

        <div class="card-body">
            <div class="card-title">
                {{ book.title }}
            </div>
            <div class="card-text">
               écrit par {{ book.author }} . Son numéro ISBN est : {{ book.isbn }}
            </div>
        </div>
    </div>
</div>
{% endblock %}